# Database Configuration
DATABASE_URL=sqlite:///./data/talent_database.db

# Google Cloud Configuration
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_PROJECT_ID=your_project_id_here
GOOGLE_CLOUD_SPEECH_KEY=your_gcs_speech_key

# OpenAI Configuration (optional)
OPENAI_API_KEY=your_openai_api_key_here

# Sarvam AI Configuration (for Indian languages)
SARVAM_API_KEY=your_sarvam_api_key_here

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
MAX_RETRIES=3
TEMPERATURE=0.1

# File Upload Settings
MAX_FILE_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf,docx,txt,mp4,mov,avi,mp3,wav

# Multimodal Processing
VIDEO_FRAME_EXTRACTION_INTERVAL=30
AUDIO_SAMPLE_RATE=16000
SPEECH_LANGUAGE=en-US